<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:elevation="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txt_natureza_movimentacao"
            style="@style/circle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="A"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_descricao_movimentacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Descrição"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/txt_valor_movimentacao"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/txt_natureza_movimentacao"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_carteira_movimentacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:text="Carteira"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/txt_natureza_movimentacao"
            app:layout_constraintTop_toBottomOf="@+id/txt_descricao_movimentacao" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:text="|"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/txt_carteira_movimentacao"
            app:layout_constraintTop_toBottomOf="@+id/txt_descricao_movimentacao" />

        <TextView
            android:id="@+id/txt_categoria_movimentacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="8dp"
            android:text="Categoria"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/txt_valor_movimentacao"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView30"
            app:layout_constraintTop_toBottomOf="@+id/txt_descricao_movimentacao" />

        <TextView
            android:id="@+id/txt_valor_movimentacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="R$ 0.00"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_menu_movimentacao"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_menu_movimentacao"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/txt_cor_movimentacao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_more" />

        <TextView
            android:id="@+id/txt_cor_movimentacao"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorAcaoTransferencia"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_data_movimentacao" />

        <TextView
            android:id="@+id/txt_data_movimentacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="00/00/0000"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/txt_natureza_movimentacao"
            app:layout_constraintTop_toBottomOf="@+id/textView30" />
    </android.support.constraint.ConstraintLayout>


