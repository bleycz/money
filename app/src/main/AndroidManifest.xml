<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.droppages.pedrohenrique.pocketcoin">

    <application
        android:name=".dal.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_aux"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_aux"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".view.MovimentacaoActivity"
            android:label="Movimentação"
            android:parentActivityName=".view.MainActivity" />
        <activity
            android:name=".view.MainActivity"
            android:label="Dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.TagActivity"
            android:label="Tag"
            android:parentActivityName=".view.MainActivity" />
        <activity
            android:name=".view.LogActivity"
            android:label="Log"
            android:parentActivityName=".view.MainActivity" />
        <activity
            android:name=".view.CategoriaActivity"
            android:label="Categoria"
            android:parentActivityName=".view.MainActivity" />
        <activity
            android:name=".view.CarteiraActivity"
            android:label="Carteira"
            android:parentActivityName=".view.MainActivity" />
        <activity
            android:name=".view.CadastrarUsuarioActivity"
            android:label="Cadastrar usuário"
            android:parentActivityName=".view.LoginActivity" />
        <activity
            android:name=".view.TransferenciaActivity"
            android:label="Transferência"
            android:parentActivityName=".view.MainActivity" />
        <activity
            android:name=".view.EditarCarteiraActivity"
            android:label="Editar carteira"
            android:parentActivityName=".view.MainActivity" />
        <activity
            android:name=".view.EditarTagActivity"
            android:label="Editar tag"
            android:parentActivityName=".view.MainActivity"/>
        <activity
            android:name=".view.EditarCategoriaActivity"
            android:label="Editar categoria"
            android:parentActivityName=".view.MainActivity"/>
    </application>

</manifest>